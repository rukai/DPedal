// Configure the dpad in the middle of the dpedal
pad {
    // left and right are initially set to "Nothing" as they are easy to bump when you start learning to operate the dpedal
    // Once you are comfortable with navigating up and down with dpedal try setting left "Left" and right "Right"
    left "Nothing"
    right "Nothing"
    up "Up"
    down "Down"
}

// Configure the buttons on the corners of the dpedal
side-buttons {
    top-left "Backspace"
    top-right "Enter"
    bottom-left "LeftShift"
    bottom-right "Tab"
}

// Configure the buttons on the extension device plugged into 20-pin port on the back of the dpedal
back-extension {
    button1 "Nothing"
    button2 "Nothing"
    button3 "Nothing"
    button4 "Nothing"
}

